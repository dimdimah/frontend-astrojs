---
interface Props {
  title: string;
  href: string;
  description: string;
}

const { href, title, description } = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden p-6 bg-[#FFF] mb-4">
  <h2 class="font-bold text-base">{title}</h2>
  <p class="text-gray-500 mb-5 text-sm">{description}</p>
  <a
    href={href}
    class="text-center mt-4 bg-[#F3F5F7] text-sm hover:bg-[#dddfe0] font-semibold p-2 rounded-md"
    >Lihat Detail</a
  >
</div>
