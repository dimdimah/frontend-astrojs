---
interface Props {
  title: string;
  href: string;
  description: string;
}

const { href, title, description } = Astro.props;
---

<div
  class="max-w-sm rounded-xl overflow-hidden mt-4 mb-6 p-6 bg-[#FFF] shadow-lg border-2 border-solid border-slate-100 gap-2 flex flex-row justify-between"
>
  <div>
    <h2 class="font-bold text-2xl">{title}</h2>
    <p class="text-gray-700 text-md mb-5">{description}</p>
    <a
      href={href}
      class="text-center mt-4 bg-[#EDE3D5] hover:bg-[#cec5b8] font-semibold p-2 rounded-md"
      >Lihat Detail</a
    >
  </div>
  <div>
    <img src="/banner.svg" alt={title} class="w-28 h-28 object-cover" />
  </div>
</div>
