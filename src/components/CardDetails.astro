---
interface Props {
  title: string;
  description: string;
  text?: string;
}

const { title, description, text } = Astro.props;
---

<!-- compenents buat card -->
<div class="max-w-sm rounded-xl overflow-hidden my-2 p-6 bg-[#FFFFFF]">
  <h2 class="font-semibold text-base">{title}</h2>
  <p class="text-gray-700 text-sm">{description}</p>
  <p class="text-gray-700 text-sm">{text}</p>
</div>
