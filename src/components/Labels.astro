---
interface Props {
  label: string;
  description: string;
}

const { label, description } = Astro.props;
---

<div class="flex flex-row items-center gap-2 text-sm">
  <span class="bg-[#05456C] py-3 px-1 rounded-lg"></span>
  <div class="flex flex-row gap-1">
    <h1>{label}</h1>
    <p>{description}</p>
  </div>
</div>
