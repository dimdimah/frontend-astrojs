---
import Card from "@components/Card.astro"

const response = await fetch('http://localhost:3221/api/hari');
const datas = await response.json();
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jadwal Ku</title>
</head>
<body class="bg-[#F3F5F7]">
    <div class="mx-5 mt-5">
        <h1 class="font-bold text-2xl">Hai, DimahðŸ‘‹</h1>
        <h1 class="font-bold text-2xl">Siap berkegiatan!</h1>
        <div class="mt-5 font-semibold text-lg">
            <p>Schedule</p>
            <ul >
                {datas.getData.data.map((hari) => (
